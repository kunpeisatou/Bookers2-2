<h2>プロフィール編集</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <!-- プロフィール画像設定用フォーム -->
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <label for="inputImage">ProfileImage</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  <!-- プロフィール画像設定用フォーム終わり -->
  <%= f.submit "変更を保存" %>
<% end %>


<!-- Boolers2 -->
<main>
   <p id="notice"><%= flash[:notice] %></p>
   <div class='container'>
     <div class='row'>
       <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
         <h2>User info</h2>
         <%= form_with model:@user, local:true do |f| %>
           <!-- ユーザ名 -->
           <div class="form-group">
             <label for="user_name">Name</label>
             <input class="form-control name" type="text"  name="user[name]" id="user_name" />
           </div>
           <!-- 画像 -->
           <div class="form-group">
             <label for="user_image">Image</label>
             <input value="{}" data-reference="ab18f1a918e18d35b5081dde6f1797d0" type="hidden" name="user[profile_image]" /><input class="form-control-file user_image" data-reference="ab18f1a918e18d35b5081dde6f1797d0" include_hidden="false" type="file" name="user[profile_image]" id="user_profile_image" />
           </div>
           <!-- 説明 -->
           <div class="form-group">
             <label for="user_introduction">Introduction</label>
             <input class="form-control introduction" name="user[introduction]" id="user_introduction"/>
           </div>
           <div class="form-group">
             <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User" />
           </div>
         <% end %>
     </div>
   </div>
</main>