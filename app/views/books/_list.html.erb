<div class="card-list-container py-5">
  <% books.each do |book| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to book_path(book.id) do %>
      <%= attachment_image_tag book, :image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(book_path(post_image.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= book.title %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= book.body %></p>
          <span><i class="fas fa-user"></i> By <%= book.user.name %> ｜ </span>
          
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%= paginate post_images %>
  
 