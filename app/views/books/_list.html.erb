      <!-- プロフィール -->
      <table class='table'>
       <tr><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></tr>
       <tr>
          <th>name</th>
          <th><%= user.name %></th>
       </tr>
       <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
       </tr>
      </table>

      <!-- 編集ボタン-->
      <% if user.id == current_user.id %>
       <div class='row'>
          <%= link_to"",edit_user_path(current_user.id) ,class:"btn btn-outline-secondary btn-block fas fa-user-cog"%>
       </div>
      <% end %>

