<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
   
   <div class='row'>
     <div class='col-md-3'>
      <!-- プロフィール&投稿 -->
      <%= render 'books/list', user: @book.user,book: @new_book %>
     </div>
     
     <!-- 投稿一覧 -->
     <div class='col-md-8 offset-md-1'>
       <h2>Books</h2>
       <table class='table table-hover table-inverse'>
         <thead>
           <tr>
             <th></th>
             <th>Title</th>
             <th>Opinion</th>
             <th colspan="3"></th>
           </tr>
         </thead>
         <tbody>
           <tr>
             <td>
               <%= link_to(user_path(@book.user) ,class:"attachment user profile_image fallback")do%>
                 <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
               <% end %>
             </td>
             <td>
               <%= link_to book_path(@book) do %>
                 <%= @book.title %>
               <% end %>
             </td>
             <td><%= @book.body %></td>
             
             <!-- 編集 -->
              <% if @book.user.id == current_user.id %>
                <td>
                    <%= link_to"Edit",edit_book_path(@book.id) ,class:"btn btn-sm btn-success edit_book_27283"%>
                </td>
                <td>
                 
                <%= link_to "Destroy", book_path(@book.id), method: :delete , data: {confirm: "本当に消しますか？"}, class:"btn btn-sm btn-danger"%>
                </td>
              <% end %>
             <!-- 編集ここまで -->
           </tr>
         </tbody>
       </table>
     </div>
   </div>
  </div>
</main>
